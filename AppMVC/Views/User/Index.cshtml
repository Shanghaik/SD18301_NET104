@model IEnumerable<AppData.Models.User>

@{
    ViewData["Title"] = "Index";
    var username = TempData["Username"];
    var count = (int)ViewData["count"]; // đếm số lượng được tìm thấy
}

<h1>Index</h1>
@{
    if (username != null)
    {
        <h4>Xin chào @username</h4>
    }
    else
    {
        <h4>Bạn chưa Dunk nhập</h4>
    }
}
<form action="/User/Index" method="get">
    <input type="text" id="searchInput" name="name" placeholder="Nhập chuỗi tìm kiếm...">
    <input type="submit" value="Search">
</form>
<p>Ta tìm thấy số bản ghi là: @count</p>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
            @Html.DisplayFor(modelItem => item.Id)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>
                <td>
                    @Html.ActionLink("Update", "Update", new { id=item.Id}) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id}))
                </td>
            </tr>
        }
    </tbody>
</table>
